<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.openmrs.module.kenyaemr.model">

    <class name="AdverseDrugReactionEmailLog" table="adr_report_email_log">
        
        <id name="id" column="adr_report_email_log_id">
            <generator class="native"/>
        </id>

        <many-to-one name="patient" class="org.openmrs.Patient" column="patient_id" not-null="true"/>
        
        <many-to-one name="encounter" class="org.openmrs.Encounter" column="encounter_id" not-null="true"/>
        
        <many-to-one name="user" class="org.openmrs.User" column="sent_by_user_id" not-null="true"/>
        
        <property name="dateSent" column="date_sent" type="timestamp" not-null="true"/>
        
        <property name="recipientEmail" column="recipient_email" type="string" length="255" not-null="true"/>
        
        <property name="status" column="status" type="string" length="50"/>

    </class>

</hibernate-mapping>